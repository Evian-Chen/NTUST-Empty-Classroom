const mongoose = require("mongoose");
const conn = require("./db");

const courseSchema = mongoose.Schema({
    name: {
        type: String,
        required: true
    },
    professor: {
        type: String
    },
    timeSlice: {
        type: [Number], // e.g. [1, 3, 5] for 第一節、第三節、第五節
        required: true
    },
    weekday: {
        type: Number, // 0 (Sunday) to 6 (Saturday)
        required: true
    }
});

const Course = conn.model("Course", courseSchema);
module.exports = Course;